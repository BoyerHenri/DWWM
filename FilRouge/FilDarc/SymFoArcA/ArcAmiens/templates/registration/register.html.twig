{% extends 'base.html.twig' %}

{% block title %}Ouverture de compte{% endblock %}

{% block body %}
    <br>
    <div class="row justify-content-center align-items-center text-center">
        <div class="card bg-warning ml-4 pl-4 pr-4 pb-4 pt-4">
            <h1>Ouvrir un compte</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {
                label: 'Entrez votre E-mail'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions d\'utilisation'
            }) }}
            {# Boutton #}
            <button  class="btn btn-primary" type="submit">
                <i class="bi bi-check-circle">S'enregistrer !</i>
            </button>
        </div>

        {# Bloc droit #}
        <div class="card bg-warning ml-2">
            <img src="/images/Register.jpg" alt="Archere de face" class="mx-auto">
        </div>
    </div>
       
    {{ form_end(registrationForm) }}
{% endblock %}
